<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-box">
      <img src="/images/contoh.png" alt="images">
      
      <h2>Sign In</h2>      
      <p class="halo-text">Halo! Silakan login dengan akun Anda</p>
      
      <form action="/login" method="POST">

        <div class="mb-3">
          <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
        </div>
  
        <div class="mb-3">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        </div>

        <p class="center-text">Belum punya akun? <a href="/signup">Daftar di sini</a>.</p>

        <button type="submit" class="btn btn-primary w-100 custom-btn">Sign In</button>
      </form>
      
    </div>
  </div>
  